.root
  display none
  +tablet()
    color #636363
    display flex
    flex-direction row
    background-color #f7f7f7
    justify-content center
    padding 4u
    border-top-left-radius 0.5u
    border-top-right-radius 0.5u

.button
  width 18u
  height 6u
  align-items center
  justify-content center
  radius(l)
  margin-left 4u
  &.first
    margin-left 0u
    background-color white

.title
  color #636363
  font(xl)