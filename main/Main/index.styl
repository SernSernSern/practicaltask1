.main
  background-color #ffffff
  color #636363
  radius(m)
  
.section
  padding 6u 4u 2u
  text-align center
  border-top solid 1px #dddddd
  +tablet()
    padding 8u 8u 4u
  +desktop()
    padding 10u 10u 6u 
  +wide()
    padding 12u 12u 8u
  &.intro
    +tablet()
      flex-direction row
      justify-content space-around
    

.text
  color #636363
  text-align center
  font-family 'SourceSansPro-Light'
  &.headerOne
    margin-top 2u
    font(xxxl)
  &.headerTwo
    margin-top 2u
    font(xxl)
  &.small
    margin-top 4u
    font(xl)
    &.center
      +tablet()
        width 40u
      +desktop()
        width 60u
      +wide()
        width 80u
  &.extraSmall
    font(l)
  &.textstyle
    color #ffffff
    font(xxxl)
.div
  text-align center
  align-items center
  &.features
    flex-direction column-reverse
    +tablet()
      flex 1
      flex-direction row
  &.spotlight
    +tablet()
      flex 1
  &.major
    width 100%
    margin-top 4u
    +tablet()
      flex-direction row
      justify-content space-around
    +desktop()
      margin-top 6u
    +wide()
      margin-top 6u
  &.column
    margin-top 4u
    justify-content center
    +tablet()
      flex-direction row
      margin-top 4u
      width 100% 
      justify-content space-around
      align-items center
    +desktop()
      margin-top 6u 
    +wide()
      margin-top 8u
  &.intext
    margin-top 4u
    text-align justify
    +tablet()
      flex-direction row
      width 100%
    +desktop()
      margin-top 6u
    +wide()
      margin-top 8u
  &.margin
    margin-top 4u
.style
  padding 8u
  text-align center
  color #ffffff
  align-items center
  justify-content center
  +tablet()
    flex 1
    padding 4u
  &.pink
    background-color #efa8b0
    border-bottom-left-radius 0
    border-top-right-radius 1u
    border-top-left-radius 1u
    +tablet()
      border-bottom-left-radius 1u
      border-top-right-radius 0
    
  &.liliac
    background-color #c79cc8
  &.purple
    background-color #a89cc8
  &.blue
    background-color #9bb2e1  
  &.sky
    background-color #8cc9f0
    border-bottom-right-radius 1u
    border-top-right-radius 0
    border-bottom-left-radius 1u
    +tablet()
      border-top-right-radius 1u
      border-bottom-left-radius 0

.button
  margin-top 4u
  margin-left 2u
  &.one
    +tablet()
      padding 0 43%
  &.row
    flex-direction row
    
    +tablet()
      justify-content center
    +wide()
      margin-top 8u

  &.first
    margin-left 0u

.image
  border-color #dddddd
  height 32u
  width 32u
  radius(circle)
  border solid 1px
  color #636363
  text-align center