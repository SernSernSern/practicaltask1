
.root
  padding 6u 2u 2u 2u
  color #ffffff 
  +tablet()
    flex-wrap wrap
    padding 8u 8u 4u
    flex-direction row
  +desktop()
    padding 10u 10u 6u
  +wide()
    padding 12u 12u 8u

.about
  +tablet()
    flex 1
    margin-left 4u

.adress
  margin-left 0u
  margin-top 6u
  +tablet()
    flex 1
    margin-left 4u
    margin-top 0u
    padding-left 8u

.icons
  margin-top 4u
  flex-direction row
  justify-content space-between
  +tablet()
    justify-content start
  &.first
    flex-direction row
    +tablet()
      margin-left 0
      color rgba(255, 255, 255, 0.65) 
    
.title
  color #ffffff
  font(xxl)

.description
  color rgba(255, 255, 255, 0.65)
  font(xl)
  margin-top 4u

.buttonText
  color rgba(255, 255, 255, 0.65)
  font(xl)
  margin-top 4u
  margin-top 0u

.icon
  height 6u
  width 6u
  background-color rgba(255, 255, 255, 0.35)
  justify-content center
  radius(circle)
  margin-left 2u
  text-align center
  align-items center
  color #ffffff 
  &.first
    margin-left 0u

.button
  margin-top 4u
  width 30u
  height 6u
  align-items center
  justify-content center
  border solid 1px #dddddd
  radius(l)

.copyright
  align-self center
  flex-direction row

.copyrightText
  color rgba(255, 255, 255, 0.65)
  text-align center
  font(m)
  &.url
    border-bottom dotted 1px
    border-color #ffffff

.adressRow
  flex-direction row


.adressTitle
  color #ffffff
  font(xl)
  margin-top 4u

.adressDescription
  color rgba(255, 255, 255, 0.65)
  margin-left 6u
  font(m)
  margin-top 4u
  
  